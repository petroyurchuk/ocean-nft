<header class="header">
  <div class="header__logo logo-header">
    <img src="/images/header/logo.png" alt="header logo" />
    <div class="logo-header__text">
      Ocean<span>NFT</span>
    </div>
  </div>
  <nav class="header__navigation">
    <ul class="header__list list-header">
      {{#each headerList}}
        <li class="list-header__item"><a
            class="list-header__link"
            href="#"
          >{{this}}</a></li>
      {{/each}}
    </ul>
  </nav>
  <div class="header__actions actions-header">
    <div class="actions-header__item">
      <img src="/images/header/cart.svg" alt="cart image" />
    </div>
    <div class="actions-header__item">
      <img src="/images/header/user.svg" alt="user image" />
    </div>
  </div>
  <button class="header__burger-btn">
    <span></span>
    {{! <img src="/images/header/burger.svg" alt="burger icon" /> }}
  </button>
  <div class="header__burger-wrapper">
    <div class="header__burger-actions actions-header">
      <div class="actions-header__item">
        <img src="/images/header/cart.svg" alt="cart image" />
      </div>
      <div class="actions-header__item">
        <img src="/images/header/user.svg" alt="user image" />
      </div>
    </div>
    <nav class="header__navigation-burger">
      <ul class="header__burger-list burger-list">
        {{#each headerList}}
          <li class="burger-list__item"><a
              class="burger-list__link"
              href="#"
            >{{this}}</a></li>
        {{/each}}
      </ul>
    </nav>
  </div>
</header>